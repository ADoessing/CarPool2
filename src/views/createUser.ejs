<script>

function checkInput() {
  let regex_Email = /^([A-z]+[.]?[A-z]+)+@([A-z]+[.]?[A-z]+)+[.][a-z]{2,5}$/g;
  let regex_Password = /(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^]{8,})/g;
  let regex_Username = /^([A-Za-z0-9]){1}([A-z0-9]|[-_])*$/g;
  let correctInformation = true;
  let username = document.forms["registerform"]["username"].value;
  let email = document.forms["registerform"]["email"].value;
  let password = document.forms["registerform"]["password"].value;
  let password_repeat = document.forms["registerform"]["password_repeat"].value;

  if (regex_Username.test(username)) {
    document.forms["registerform"]["username"].style.borderColor="black";
  } else {
    document.forms["registerform"]["username"].style.borderColor="red";
    correctInformation = false;
  }

  if (regex_Email.test(email)) {
    document.forms["registerform"]["email"].style.borderColor="black";
  } else {
    document.forms["registerform"]["email"].style.borderColor="red";
    correctInformation = false;
  }

  if (regex_Password.test(password)) {
    document.forms["registerform"]["password"].style.borderColor="black";
  } else {
    document.forms["registerform"]["password"].style.borderColor="red";
    correctInformation = false;
  }

  if (regex_Password.test(password_repeat)) {
    document.forms["registerform"]["password_repeat"].style.borderColor="black";
  } else {
    document.forms["registerform"]["password_repeat"].style.borderColor="red";
    correctInformation = false;
  }

  return correctInformation;

}

</script>

        <div id="header">
            <div class="container-fluid text-center">
                <div class="row">

                    <div class="col-xs-4 col-sm-3" style="background-color:yellow;">
                        <h1>SDU PENDLING</h1>
                        <p>Register a user to get all the zero benefits to day! </p>
                    </div>
                    <div class="card card-body bg-light mt-5">
                        <div class="col-xs-2 col-md-offset-6" style="background-color:lavender;">
                            <div class="row">
                              <form action="createUser" method="POST" id="registerform" onsubmit="return checkInput()">
                                  <label class="form-label h5">Username</label>
                                  <input type="text" name="username" id="username" class="form-control" placeholder=""/>


                                      <label class="form-label h5">Email</label>
                                      <input type="email" name="email" id="email" class="form-control" placeholder=""/>



                                      <label class="form-label h5">Password</label>
                                      <input type="password" name="password" class="form-control" id="password" placeholder=""/>



                                      <label class="form-label h5">Repeat Password</label>
